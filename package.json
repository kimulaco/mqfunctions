{
  "name": "mqfunctions",
  "version": "0.2.1",
  "engines": {
    "node": "=20",
    "npm": "=10"
  },
  "type": "module",
  "description": "JavaScript library to manage matchMedia handlers.",
  "keywords": [
    "media query",
    "match media",
    "mql"
  ],
  "author": "kimulaco",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://kimulaco@github.com/kimulaco/mqfunctions.git"
  },
  "homepage": "https://github.com/kimulaco/mqfunctions",
  "bugs": {
    "url": "https://github.com/kimulaco/mqfunctions/issues"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.es.js",
  "browser": "dist/mqfunctions.js",
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "start": "serve test/fixtures -p 3000",
    "prebuild": "rimraf dist",
    "build": "rollup -c",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "test:unit": "jest -c jest.unit.config.cjs --verbose --coverage",
    "test:e2e": "jest -c jest.e2e.config.cjs --verbose",
    "pretest:e2e": "node scripts/setupE2E.cjs",
    "test:serve": "serve test/fixtures -p 3000"
  },
  "dependencies": {
    "tslib": "2.6.3"
  },
  "devDependencies": {
    "@eslint/js": "9.9.1",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "26.0.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "11.1.6",
    "@types/expect-puppeteer": "5.0.6",
    "@types/jest": "29.5.12",
    "@types/jest-environment-puppeteer": "5.0.6",
    "@typescript-eslint/eslint-plugin": "8.1.0",
    "@typescript-eslint/parser": "8.1.0",
    "eslint": "9.9.1",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.9.0",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-matchmedia-mock": "1.1.0",
    "jest-puppeteer": "10.1.0",
    "lodash.camelcase": "4.3.0",
    "lodash.upperfirst": "4.3.1",
    "prettier": "3.3.3",
    "puppeteer": "23.1.1",
    "rimraf": "6.0.1",
    "rollup": "4.21.1",
    "serve": "14.2.3",
    "ts-jest": "29.2.5",
    "typescript": "5.5.4"
  }
